<h2>Sign up</h2>
<div class ="signup">
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :'upload image' %><br>
  <%= f.file_field :photo %></div>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.label :FullName %><br>
  <%= f.text_field :full_name %></div>

  <div><%= f.label :'Mobile number' %><br>
  <%= f.text_field :mobile_number %></div>

  <div><%= f.label :Address %><br>
  <%= f.text_area :address, :size => "50x5" %></div><br>

  <div><%= f.label :'Select Contact Type' %><br>
  <%= f.select("contact_type", %w[Driver Employee],  { index: nil }) %></div><br>

  <div><%= f.submit "Sign up" %></div>

<% end %>

<%= render "devise/shared/links" %>
</div>
