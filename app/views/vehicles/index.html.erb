<h1>Listing vehicles</h1>

<table>
  <tr>
    <th>Vehicle name</th>
    <th>Driver name</th>
    <th>User</th>
    <th>Vehicle make</th>
    <th>Vehicle number</th>
    <th>Start point</th>
    <th>End point</th>
    <th>Not in use</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @vehicles.each do |vehicle| %>
  <tr>
    <td><%= vehicle.vehicle_name %></td>
    <td><%= vehicle.driver_name %></td>
    <td><%= vehicle.user_id %></td>
    <td><%= vehicle.vehicle_make %></td>
    <td><%= vehicle.vehicle_number %></td>
    <td><%= vehicle.start_point %></td>
    <td><%= vehicle.end_point %></td>
    <td><%= vehicle.not_in_use %></td>
    <td><%= link_to 'Show', vehicle %></td>
    <td><%= link_to 'Edit', edit_vehicle_path(vehicle) %></td>
    <td><%= link_to 'Destroy', vehicle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

